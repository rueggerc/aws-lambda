{
  "name": "sensor-service",
  "version": "1.0.0",
  "description": "Sensor Lambda",
  "main": "index.js",
  "scripts": {
    "test": "nyc --reporter=lcov node_modules/.bin/mocha '*/test/*.js'",
    "build": "npm run test-get-sensor-data",
    "test-get-sensor-data": "node_modules/.bin/mocha --recursive 'get-sensor-data/test'",
    "test-put-sensor-data": "node_modules/.bin/mocha --recursive 'put-sensor-data/test'",
    "build-get-sensor-data": "node_modules/.bin/gulp --gulpfile get-sensor-data/gulpfile.js build",
    "deploy": "node build/upload-to-aws",
    "build-and-deploy": "npm run build build && npm run deploy"
  },
  "author": "Chris",
  "license": "ISC",
  "devDependencies": {
    "del": "^2.2.2",
    "gulp": "^3.9.1",
    "gulp-babel": "^6.1.3",
    "gulp-rename": "^1.3.0",
    "gulp-tap": "^0.1.3",
    "gulp-zip": "^3.2.0",
    "jsdoc": "^3.5.5",
    "minimist": "^1.2.3",
    "chai": "^4.2.0",
    "dotenv": "^7.0.0",
    "sinon": "^7.3.2",
    "run-sequence": "^1.2.2",
    "mocha": "^6.2.0",
    "mocha-sonarqube-reporter": "^1.0.1",
    "nyc": "^14.1.1",
    "sonar-scanner": "^3.1.0",
    "sonarqube-scanner": "^2.5.0"
  },
  "dependencies": {
    "jsonschema": "^1.2.0",
    "postgres-uno": "^1.1.2"
  }
}
